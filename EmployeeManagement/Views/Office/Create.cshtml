@model OfficeCreateViewModel

@{ 
    ViewBag.Title = "Create Office";
}

<form enctype="multipart/form-data" asp-controller="office" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MinimumManning" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <span asp-validation-for="MinimumManning" class="text-danger"></span>
            <input asp-for="MinimumManning" class="form-control" type="number" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
